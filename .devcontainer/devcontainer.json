{
  "name": "template-codespaces-html",
  "image": "mcr.microsoft.com/devcontainers/javascript-node:18",
  "customizations": {
    "vscode": {
      "extensions": [
        "ritwickdey.LiveServer"
      ]
    }
  },
  "forwardPorts": [
    5500
  ],
    "postCreateCommand": [
      "npm install -g http-server",
      "npm install http-server",
      "npm install -g http-server || tail -n 20 ~/.npm/_logs/*.log",
      "npm install http-server || tail -n 20 ~/.npm/_logs/*.log"
    ],
    "postStartCommand": [
      "npm install -g http-server",
      "npm install http-server",
      "npm install -g http-server || tail -n 20 ~/.npm/_logs/*.log",
      "npm install http-server || tail -n 20 ~/.npm/_logs/*.log"
    ]
}